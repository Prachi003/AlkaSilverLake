<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/setting_card"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="@color/whiteColor"
        app:cardCornerRadius="6dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/brownbold"
                android:text="@string/Bottle_type"
                android:textColor="@color/appColor"
                android:textSize="20dp"

                />

            <ImageView
                android:id="@+id/clereg_logo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:tint="@color/grayMostDark"
                android:background="@drawable/circlewhite"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_cancel" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/check_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/cat"
                android:layout_marginTop="10dp"
                android:scrollbars="none" />



        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>