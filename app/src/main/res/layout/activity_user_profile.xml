<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/rlParentnew"
    android:background="@drawable/splash_bg"
    android:layout_height="match_parent"
    tools:context="com.alkline.alkasilverlake.profile.UserProfileActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/ivProfile"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="20dp"
                        android:tint="@color/grayMostDark"
                        android:background="@drawable/circlewhite"
                        app:srcCompat="@drawable/ic_user_ico"
                        tools:ignore="ContentDescription" />



                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="18dp"
                        android:padding="2dp"
                        android:id="@+id/imgBack"
                        android:src="@drawable/right_arrow_ico"
                        android:layout_marginRight="5dp"
                        android:layout_alignParentEnd="true"
                        tools:ignore="ContentDescription"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="5dp" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="@color/newgray"
                    android:layout_marginTop="20dp"
                    android:layout_height="1dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/llPickDel"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="30dp"

                        android:layout_gravity="center"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:fontFamily="@font/brownstdbold"
                            android:text="@string/find_alka_silver_lake"
                            android:textSize="10sp"


                            android:textColor="@color/newgray"
                            android:id="@+id/txtPick"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:fontFamily="@font/brownregular"
                            android:text="@string/for_delivery_and_pickup"
                            android:textSize="10sp"
                            android:textColor="@color/newgray"

                            android:layout_below="@+id/txtPick"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content"  />


                        <ImageView
                            android:layout_width="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_height="30dp"
                            android:src="@drawable/map_ico"
                            android:layout_alignParentRight="true" />

                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:background="@color/newgray"
                        android:layout_marginTop="30dp"
                        android:layout_height="1dp"/>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:id="@+id/llRedeem"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/brownstdbold"
                        android:text="View/Redeem Credits"
                        android:textAllCaps="true"
                        android:textSize="10sp"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/newgray"
                        android:id="@+id/txtRedim"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content" />


                    <View
                        android:layout_width="match_parent"
                        android:background="@color/newgray"
                        android:layout_marginTop="30dp"
                        android:layout_height="1dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:id="@+id/llPaymethods"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/brownstdbold"
                        android:text="Payment methods"
                        android:textAllCaps="true"
                        android:textSize="10sp"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/newgray"
                        android:id="@+id/txtPersonal"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_width="match_parent"
                        android:background="@color/newgray"
                        android:layout_marginTop="30dp"
                        android:layout_height="1dp"/>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/llPersonal"
                    android:visibility="gone"
                    android:layout_height="wrap_content">



                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/brownstdbold"
                        android:text="Personal"
                        android:textAllCaps="true"
                        android:textSize="10sp"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/newgray"
                        android:id="@+id/txtPaymentMethod"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content" />


                    <View
                        android:layout_width="match_parent"
                        android:background="@color/newgray"
                        android:layout_marginTop="30dp"
                        android:layout_height="1dp"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:id="@+id/llPreferences"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/brownstdbold"
                        android:text="Preferences"
                        android:textAllCaps="true"
                        android:textSize="10sp"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/newgray"
                        android:id="@+id/txtPrefrences"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content" />


                    <View
                        android:layout_width="match_parent"
                        android:background="@color/newgray"
                        android:layout_marginTop="30dp"
                        android:layout_height="1dp"/>

                </LinearLayout>




               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="vertical"
                   android:id="@+id/llAboutAlka"
                   android:layout_height="wrap_content">


                   <TextView
                       android:layout_width="wrap_content"
                       android:fontFamily="@font/brownstdbold"
                       android:text="About alka silver lake"
                       android:textAllCaps="true"
                       android:textSize="10sp"
                       android:layout_marginTop="30dp"
                       android:textColor="@color/newgray"
                       android:id="@+id/txtAbout"
                       android:layout_marginLeft="5dp"
                       android:layout_height="wrap_content" />


                   <View
                       android:layout_width="match_parent"
                       android:background="@color/newgray"
                       android:layout_marginTop="30dp"
                       android:layout_height="1dp"/>

               </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/llLogOut"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/brownstdbold"
                        android:text="Log Out"
                        android:textAllCaps="true"
                        android:textSize="10sp"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/newgray"
                        android:id="@+id/txtLogout"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content" />


                    <View
                        android:layout_width="match_parent"
                        android:background="@color/newgray"
                        android:layout_marginTop="30dp"
                        android:layout_height="1dp"/>

                </LinearLayout>



            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:visibility="gone"
                android:id="@+id/rlOrderClick"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="7dp"
                    android:layout_marginBottom="40dp"
                    android:layout_marginStart="7dp"
                    app:cardBackgroundColor="@color/ligthestWhiteColor"
                    app:cardCornerRadius="20dp"
                    app:cardUseCompatPadding="true">




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="30dp"
                        android:layout_gravity="bottom"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/txtSignUp"
                            android:layout_width="0dp"
                            android:padding="8dp"

                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_weight="1"
                            android:fontFamily="@font/brownregular"
                            android:gravity="center|bottom"
                            android:text="@string/new_account"
                            android:letterSpacing=".1"
                            android:textColor="@color/darkGrayColor"
                            android:textSize="8sp" />


                        <View
                            android:layout_width="1dp"
                            android:layout_height="12dp"
                            android:layout_marginBottom="6dp"

                            android:layout_gravity="bottom"
                            android:background="@color/darkGrayColor" />


                        <TextView
                            android:id="@+id/txtSignIn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_weight="1"
                            android:fontFamily="@font/brownregular"
                            android:gravity="center"


                            android:text="@string/signin"
                            android:padding="8dp"
                            android:letterSpacing=".1"
                            android:textColor="@color/darkGrayColor"
                            android:textSize="8sp" />


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/setting_card"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"

                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    app:cardBackgroundColor="@color/whiteColor"
                    app:cardCornerRadius="26dp"
                    app:cardUseCompatPadding="true">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="@string/let_s_get_started"
                                android:textAllCaps="true"
                                android:layout_gravity="center"
                                android:textSize="18sp"
                                android:textColor="@color/pickerview_wheelview_textcolor_center"
                                android:fontFamily="@font/brownbold"
                                android:layout_height="wrap_content" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginTop="20dp"
                                android:gravity="center"
                                android:textSize="10sp"
                                android:text="@string/view_your_account_info_manage_prefrences_set_up_payment_and_see_your_last_encounter_with_alka_silver_lake"
                                android:layout_gravity="center"
                                android:fontFamily="@font/brownregular"
                                android:layout_height="wrap_content" />



                        </LinearLayout>


                    </RelativeLayout>


                </android.support.v7.widget.CardView>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/faq"
                    android:textSize="12sp"
                    android:textColor="@color/newgray"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/brownbold"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:background="@color/newgray"
                    android:layout_height="10dp"
                    android:layout_marginStart="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/privacy_policy"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/newgray"
                    android:textAllCaps="true"
                    android:layout_gravity="center"
                    android:fontFamily="@font/brownbold"
                    android:layout_height="wrap_content" />


                <View
                    android:layout_width="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:background="@color/newgray"
                    android:layout_height="10dp"
                    android:layout_marginStart="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/rate_app"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:textSize="12sp"
                    android:textColor="@color/newgray"

                    android:textAllCaps="true"
                    android:layout_gravity="center"
                    android:fontFamily="@font/brownbold"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>
